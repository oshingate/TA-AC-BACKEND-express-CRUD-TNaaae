<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <header class="container">
      <div class="flex jsb">
        <a href="/" class="btn btn-pri"> Home </a>
        <Strong>Users</Strong>
        <a href="/users/new" class="btn btn-pri"> add new Users </a>
      </div>
    </header>
    <main>
      <section class="usersList-sec container">
        <% users.forEach(element => { %>
        <div class="user-div">
          <h2><%= element.name %></h2>
          <h3><%= element.email %></h3>
          <h3><%= element.sports %></h3>
          <a href="/users/<%=element._id%>"
            ><button class="btn btn-sec">View User</button></a
          >
        </div>
        <% }); %>
      </section>
    </main>
  </body>
</html>
